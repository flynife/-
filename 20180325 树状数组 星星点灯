#include <cstdio>  
#include <cstring>
#define F(i,x,y) for(int i=x;i<=y;i++)
using namespace std;  
int c[62236 ],n;  
int lowbit(int x)  {  return x & -x;  }  
int getsum(int num)  
{  
        int sum = 0;  
        while(num > 0)  
        {  
            sum += c[num];  
            num -= lowbit(num);  
        }  

        return sum;  
}  
void update(int num)  
{  
        while(num <= 32000)  
        {  
            c[num] ++;  
            num += lowbit(num);  
        }  
}      
int main()  
{  
    scanf("%d",&n);
    memset(c,0,sizeof(c));  
    int x,y;
    F(i,1,n)
    {  

                scanf("%d%d",&x,&y);  
                printf("%d\n",getsum(x+1));

                update(x+1);  
    }

        return 0;  
    }  
